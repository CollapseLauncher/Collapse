 <Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFrameworks>net7.0-windows10.0.19041.0;net7.0-windows10.0.22000.0</TargetFrameworks>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<Platforms>x64</Platforms>
		<UseWinUI>true</UseWinUI>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<LangVersion>preview</LangVersion>
		<Configurations>Debug;Release;Publish</Configurations>
		<WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
		<Version>1.71.9</Version>
		<DebugType>portable</DebugType>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<StartupObject>CollapseLauncher.MainEntryPoint</StartupObject>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
		<BuiltInComInteropSupport>true</BuiltInComInteropSupport>
		<TieredCompilation>true</TieredCompilation>
		<TieredCompilationQuickJit>true</TieredCompilationQuickJit>
		<TieredCompilationQuickJitForLoops>true</TieredCompilationQuickJitForLoops>
		<TieredPGO>true</TieredPGO>
		<RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;PREVIEW;SIMULATEAPPLYPRELOAD;DUMPGIJSON</DefineConstants>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;PREVIEW</DefineConstants>
		<Optimize>True</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|x64'">
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN</DefineConstants>
		<Optimize>True</Optimize>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Clowd.Squirrel" Version="2.9.42" />
		<PackageReference Include="CommunityToolkit.WinUI.UI.Controls" Version="7.1.2" />
		<PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.3" />
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.22621.756" />
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.3.230724000" />
		<PackageReference Include="System.CommandLine" Version="2.0.0-beta3.22114.1" />
		<PackageReference Include="System.Drawing.Common" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ColorThief\ColorThief\ColorThief.csproj" />
		<ProjectReference Include="..\Hi3Helper.EncTool\Hi3Helper.EncTool.csproj" />
		<ProjectReference Include="..\Hi3Helper.Core\Hi3Helper.Core.csproj" />
		<ProjectReference Include="..\Hi3Helper.Http\Hi3Helper.Http.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="CollapseLauncher.Hi3CacheUpdater.cmd">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Include="icon.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Include="Misc\InstallMediaPack.cmd">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		
		<None Include="..\.editorconfig" Link=".editorconfig" />
    
		<Content Update="Assets\Images\AiHappy.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\AponiaFly.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\default.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\GameLogo\genshin-logo.png">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\GameLogo\honkai-logo.png">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\GameLogo\starrail-logo.png">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\GameLogo\zenless-logo.png">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\PaimonSleep.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\PaimonWhat.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\StartupBackground.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Images\StartupBackground2.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\CollapseLauncherLogo.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Fonts\FontAwesomeBrand6.otf">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Fonts\FontAwesomeRegular6.otf">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Fonts\FontAwesomeSolid6.otf">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Presets\CommunityTools.json">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
    
		<Content Update="Assets\Presets\Honkai\PersonalGraphicsSettingV2.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	
	<Target Name="ConfigureTrimming" BeforeTargets="PrepareForILLink">
		<ItemGroup>
			<ManagedAssemblyToLink Condition="'%(Filename)' == 'Microsoft.WindowsAppSDK'">
				<IsTrimmable>true</IsTrimmable>
			</ManagedAssemblyToLink>
		</ItemGroup>
	</Target>
	
	<ItemGroup>
	  <Page Update="DataGrid.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </Page>
	</ItemGroup>
	
	<ItemGroup>
	  <Page Update="XAMLs\Theme\ContentDialog.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </Page>
	</ItemGroup>
</Project>
