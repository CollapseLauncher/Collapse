<!--  ReSharper disable UnusedMember.Local  -->
<!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:layeredBackgroundImage="using:CollapseLauncher.XAMLs.Theme.CustomControls.LayeredBackgroundImage">

    <Style TargetType="layeredBackgroundImage:LayeredBackgroundImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="layeredBackgroundImage:LayeredBackgroundImage">
                    <Grid x:Name="RootPanel">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="PlaceholderStates">
                                <VisualState x:Name="PlaceholderStateHidden">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PlaceholderGrid"
                                                                       Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                                  KeyTime="{StaticResource ControlFastAnimationDuration}"
                                                                  Value="0" />
                                        </DoubleAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlaceholderGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="{StaticResource ControlFastAnimationDuration}"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="PlaceholderGrid"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch" />
                        <Grid x:Name="ParallaxGrid"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid x:Name="BackgroundGrid"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" />
                        </Grid>
                        <Grid x:Name="ForegroundGrid"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>