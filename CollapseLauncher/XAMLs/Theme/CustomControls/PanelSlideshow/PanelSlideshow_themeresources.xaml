<!--  ReSharper disable UnusedMember.Local  -->
<!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <AcrylicBrush x:Key="SlideshowButtonBackground"
                          FallbackColor="#FFFFFF"
                          TintColor="#FFFFFF"
                          TintOpacity=".65" />
            <LinearGradientBrush x:Key="SlideshowProgressBarSmokeBackground" ColorInterpolationMode="ScRgbLinearInterpolation" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#00000000" />
                <GradientStop Offset="1" Color="#A0000000" />
            </LinearGradientBrush>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <AcrylicBrush x:Key="SlideshowButtonBackground"
                          FallbackColor="#222222"
                          TintColor="#222222"
                          TintOpacity=".5" />
            <LinearGradientBrush x:Key="SlideshowProgressBarSmokeBackground" ColorInterpolationMode="ScRgbLinearInterpolation" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0.25" Color="#00000000" />
                <GradientStop Offset="1" Color="#E0000000" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <x:String x:Key="SlideshowPreviousButtonGlyph">&#xE96F;</x:String>
    <x:String x:Key="SlideshowNextButtonGlyph">&#xE970;</x:String>
    <x:String x:Key="SlideshowPreviousButtonVerticalGlyph">&#xE971;</x:String>
    <x:String x:Key="SlideshowNextButtonVerticalGlyph">&#xE972;</x:String>

    <Style x:Key="SlideshowPreviousButtonStyle"
           BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}"
           TargetType="Button">
        <Setter Property="Content" Value="{StaticResource SlideshowPreviousButtonGlyph}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="SlideshowNextButtonStyle"
           BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}"
           TargetType="Button">
        <Setter Property="Content" Value="{StaticResource SlideshowNextButtonGlyph}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="SlideshowPreviousButtonVerticalStyle"
           BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}"
           TargetType="Button">
        <Setter Property="Content" Value="{StaticResource SlideshowPreviousButtonVerticalGlyph}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="SlideshowNextButtonVerticalStyle"
           BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}"
           TargetType="Button">
        <Setter Property="Content" Value="{StaticResource SlideshowNextButtonVerticalGlyph}" />
        <Setter Property="FontSize" Value="16" />
    </Style>
</ResourceDictionary>