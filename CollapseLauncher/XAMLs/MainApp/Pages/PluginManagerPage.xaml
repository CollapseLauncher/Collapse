<!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
<!--  ReSharper disable Xaml.RedundantResource  -->
<!--  ReSharper disable UnusedMember.Local  -->
<Page x:Class="CollapseLauncher.Pages.PluginManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:animations="using:CommunityToolkit.WinUI.Animations"
      xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
      xmlns:controls="using:Hi3Helper.CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:extension="using:CollapseLauncher.Extension"
      xmlns:helper="using:Hi3Helper"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:media="using:CommunityToolkit.WinUI.Media"
      xmlns:pages="using:CollapseLauncher.Pages"
      xmlns:plugins="using:CollapseLauncher.Plugins"
      xmlns:ui="using:CommunityToolkit.WinUI"
      mc:Ignorable="d">
    <Page.Resources>
        <pages:GamePluginIconConverter x:Key="GamePluginIconConverter" />
        <pages:ByStringConverter x:Key="ByStringConverter" />
        <pages:GameNameLocaleConverter x:Key="GameNameLocaleConverter" />
        <pages:GameRegionLocaleConverter x:Key="GameRegionLocaleConverter" />
        <pages:LocalFullDateTimeConverter x:Key="LocalFullDateTimeConverter" />
        <pages:NumberToBoolConverter x:Key="NumberToBoolConverter" />
        <pages:InverseNumberToBoolConverter x:Key="InverseNumberToBoolConverter" />
        <pages:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
        <pages:InverseBooleanVisibilityConverter x:Key="InverseBooleanVisibilityConverter" />
        <pages:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <pages:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter" />
        <pages:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <pages:UpdateToVersionStringConverter x:Key="UpdateToVersionStringConverter" />
        <pages:UpdatingPercentageStringConverter x:Key="UpdatingPercentageStringConverter" />
        <pages:PluginUpdatedToVersionStringConverter x:Key="PluginUpdatedToVersionStringConverter" />
        <x:Double x:Key="SettingsCardHeaderIconMaxSize">32</x:Double>
    </Page.Resources>
    <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width=".58*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              RowSpacing="16"
              Visibility="{x:Bind pages:PluginManagerPage.Context.PluginCollection.Count, Converter={StaticResource InverseCountToVisibilityConverter}, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Text="{x:Bind helper:Locale.Lang._PluginManagerPage.LeftPanelNoPluginTitle}"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <Button x:Name="GoToPluginDownloadCatalogButton"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    BorderThickness="1"
                    CornerRadius="{x:Bind extension:UIElementExtensions.AttachRoundedKindCornerRadius(GoToPluginDownloadCatalogButton)}">
                <Grid Margin="12,4"
                      ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14">
                        <Run Text="{x:Bind helper:Locale.Lang._PluginManagerPage.LeftPanelNoPluginButton1}" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind helper:Locale.Lang._PluginManagerPage.LeftPanelNoPluginButton2}" />
                        <Run Text="{x:Bind helper:Locale.Lang._PluginManagerPage.LeftPanelNoPluginButton3}" />
                    </TextBlock>
                    <FontIcon Grid.Column="1"
                              FontSize="20"
                              Glyph="&#xE826;" />
                </Grid>
            </Button>
            <Image Grid.Row="2"
                   MaxWidth="260"
                   Margin="0,16,0,0"
                   Opacity=".4"
                   Source="ms-appx:///Assets/Images/GameMascot/PaimonThreateningAura.png" />
        </Grid>
        <Grid x:Name="PluginManagementContainer"
              Grid.Column="0"
              Margin="26,26,8,26"
              RowSpacing="16"
              Visibility="{x:Bind pages:PluginManagerPage.Context.PluginCollection.Count, Converter={StaticResource CountToVisibilityConverter}, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Margin="8,0"
                           FontSize="24"
                           Style="{ThemeResource TitleTextBlockStyle}"
                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.LeftPanelListViewTitle}" />
                <StackPanel Grid.Column="1">
                    <SplitButton Padding="2,2"
                                 VerticalAlignment="Bottom"
                                 Click="OnClickCheckForUpdatesAllButton"
                                 IsEnabled="{x:Bind pages:PluginManagerPage.Context.IsUpdateCheckOnProgress, Converter={StaticResource InverseBooleanConverter}, Mode=OneWay}"
                                 Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}">
                        <SplitButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Click="OnClickUpdateAndDownloadAllPlugin"
                                                Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewMainActionButton2}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE896;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <ToggleMenuFlyoutItem IsChecked="{x:Bind pages:PluginManagerPage.Context.IsEnableAutoUpdate, Mode=TwoWay}"
                                                      Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewMainActionButton3}">
                                    <ToggleMenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE78B;" />
                                    </ToggleMenuFlyoutItem.Icon>
                                </ToggleMenuFlyoutItem>
                            </MenuFlyout>
                        </SplitButton.Flyout>
                        <Grid ColumnSpacing="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewMainActionButton1}"
                                       Visibility="{x:Bind pages:PluginManagerPage.Context.IsUpdateCheckOnProgress, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}" />
                            <FontIcon Grid.Column="1"
                                      Margin="4,4,8,4"
                                      FontSize="16"
                                      Glyph="&#xE895;"
                                      Visibility="{x:Bind pages:PluginManagerPage.Context.IsUpdateCheckOnProgress, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}" />
                            <TextBlock Grid.Column="0"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewMainActionButton1AltChecking}"
                                       Visibility="{x:Bind pages:PluginManagerPage.Context.IsUpdateCheckOnProgress, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}" />
                            <ProgressRing Grid.Column="1"
                                          Width="12"
                                          Height="12"
                                          Margin="4,4,8,4"
                                          Visibility="{x:Bind pages:PluginManagerPage.Context.IsUpdateCheckOnProgress, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}" />
                        </Grid>
                    </SplitButton>
                </StackPanel>
            </Grid>
            <ListView x:Name="PluginListView"
                      Grid.Row="1"
                      Margin="-24,0,0,0"
                      ItemsSource="{x:Bind pages:PluginManagerPage.Context.PluginCollection, Mode=OneWay}"
                      RightTapped="OnListViewRightClickUpdate"
                      SelectionMode="Multiple">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="plugins:PluginInfo">
                        <Grid Margin="0,0,-8,0"
                              Loaded="{x:Bind extension:UIElementExtensions.EnableImplicitAnimationRecursiveOnLoaded}">
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnMarkForDeletionSelectedPluginsCommand}"
                                                    CommandParameter="{x:Bind pages:PluginManagerPage.This.PluginListView.SelectedItems}"
                                                    IsEnabled="{x:Bind pages:PluginManagerPage.Context.ListViewSelectedItemsCountRestored, Converter={StaticResource NumberToBoolConverter}, Mode=OneWay}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton1}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE74D;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnRestoreFromDeletionSelectedPluginsCommand}"
                                                    CommandParameter="{x:Bind pages:PluginManagerPage.This.PluginListView.SelectedItems}"
                                                    IsEnabled="{x:Bind pages:PluginManagerPage.Context.ListViewSelectedItemsCountUninstalled, Converter={StaticResource NumberToBoolConverter}, Mode=OneWay}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton2}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE7A7;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnEnableSelectedPluginsCommand}"
                                                    CommandParameter="{x:Bind pages:PluginManagerPage.This.PluginListView.SelectedItems}"
                                                    IsEnabled="{x:Bind pages:PluginManagerPage.Context.ListViewSelectedItemsCountDisabled, Converter={StaticResource NumberToBoolConverter}, Mode=OneWay}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton3}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE930;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnDisableSelectedPluginsCommand}"
                                                    CommandParameter="{x:Bind pages:PluginManagerPage.This.PluginListView.SelectedItems}"
                                                    IsEnabled="{x:Bind pages:PluginManagerPage.Context.ListViewSelectedItemsCountEnabled, Converter={StaticResource NumberToBoolConverter}, Mode=OneWay}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton4}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xEA39;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSubItem IsEnabled="{x:Bind pages:PluginManagerPage.Context.ListViewSelectedItemsCountEnabled, Converter={StaticResource NumberToBoolConverter}, Mode=OneWay}"
                                                       Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton5}">
                                        <MenuFlyoutSubItem.Icon>
                                            <FontIcon Glyph="&#xE895;" />
                                        </MenuFlyoutSubItem.Icon>
                                        <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnCheckUpdateSelectedPluginsCommand}"
                                                        CommandParameter="{x:Bind pages:PluginManagerPage.This.PluginListView.SelectedItems}"
                                                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                        Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButtonCheckUpdateOnly}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE895;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnCheckAndDownloadUpdateSelectedPluginsCommand}"
                                                        CommandParameter="{x:Bind pages:PluginManagerPage.This.PluginListView.SelectedItems}"
                                                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                        Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButtonCheckAndDownloadUpdate}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE896;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutSeparator Margin="8,8" />
                                    <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnOpenCurrentPluginFolderCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton6}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xED43;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnOpenCollapsePluginFolderCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton7}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xED25;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSubItem Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButton8}">
                                        <MenuFlyoutSubItem.Icon>
                                            <FontIcon Glyph="&#xE895;" />
                                        </MenuFlyoutSubItem.Icon>
                                        <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnCheckUpdateCurrentPluginCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                        Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButtonCheckUpdateOnly}"
                                                        Visibility="{x:Bind IsUpdateAvailable, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE895;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnCheckAndDownloadUpdateCurrentPluginCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                        Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButtonCheckAndDownloadUpdate}"
                                                        Visibility="{x:Bind IsUpdateAvailable, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE896;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Command="{x:Bind plugins:PluginManagerPageContext.OnDownloadUpdateCurrentPluginCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                        Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContextButtonDownloadUpdate}"
                                                        Visibility="{x:Bind IsUpdateAvailable, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE896;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyoutSubItem>
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <controls:SettingsExpander Grid.Row="0"
                                                       Margin="0,2,0,2"
                                                       Padding="0"
                                                       HorizontalAlignment="Stretch"
                                                       HorizontalContentAlignment="Stretch"
                                                       HeaderIcon="{x:Bind Converter={StaticResource GamePluginIconConverter}}"
                                                       Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                       Visibility="Visible">
                                <controls:SettingsExpander.Content>
                                    <Grid ColumnSpacing="8"
                                          Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorRecursiveOnLoaded}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="1"
                                                Padding="0"
                                                Click="OnUninstallPlugin"
                                                Foreground="{ThemeResource SystemFillColorCritical}"
                                                Tag="{x:Bind}"
                                                Visibility="{x:Bind IsMarkedForDeletion, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"
                                                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContentButton1}" />
                                                <FontIcon Grid.Column="1"
                                                          Margin="4,4,8,4"
                                                          FontSize="16"
                                                          Glyph="&#xE74D;" />
                                            </Grid>
                                            <Button.Resources>
                                                <ResourceDictionary>
                                                    <ResourceDictionary.ThemeDictionaries>
                                                        <!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
                                                        <ResourceDictionary x:Key="Light">
                                                            <SolidColorBrush x:Key="ButtonBackground"
                                                                             Color="#10FF0000" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                                                             Color="#A0FF0000" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                                                             Color="#70FF0000" />
                                                        </ResourceDictionary>
                                                        <ResourceDictionary x:Key="Default">
                                                            <SolidColorBrush x:Key="ButtonBackground"
                                                                             Color="#10FF0000" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                                                             Color="#A0FF0000" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                                                             Color="#70FF0000" />
                                                        </ResourceDictionary>
                                                        <!--  ReSharper restore Xaml.StaticResourceNotResolved  -->
                                                    </ResourceDictionary.ThemeDictionaries>
                                                </ResourceDictionary>
                                            </Button.Resources>
                                        </Button>
                                        <Button Grid.Column="1"
                                                Padding="0"
                                                Click="OnRestoreUninstalledPlugin"
                                                Foreground="{ThemeResource SystemFillColorSuccess}"
                                                Tag="{x:Bind}"
                                                Visibility="{x:Bind IsMarkedForDeletion, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"
                                                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemContentButton2}" />
                                                <FontIcon Grid.Column="1"
                                                          Margin="4,4,8,4"
                                                          FontSize="16"
                                                          Glyph="&#xE7A7;" />
                                            </Grid>
                                            <Button.Resources>
                                                <ResourceDictionary>
                                                    <ResourceDictionary.ThemeDictionaries>
                                                        <!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
                                                        <ResourceDictionary x:Key="Light">
                                                            <SolidColorBrush x:Key="ButtonBackground"
                                                                             Color="#106CCB5F" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                                                             Color="#A06CCB5F" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                                                             Color="#706CCB5F" />
                                                        </ResourceDictionary>
                                                        <ResourceDictionary x:Key="Default">
                                                            <SolidColorBrush x:Key="ButtonBackground"
                                                                             Color="#100F7B0F" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                                                             Color="#A00F7B0F" />
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                                                             Color="#700F7B0F" />
                                                        </ResourceDictionary>
                                                        <!--  ReSharper restore Xaml.StaticResourceNotResolved  -->
                                                    </ResourceDictionary.ThemeDictionaries>
                                                </ResourceDictionary>
                                            </Button.Resources>
                                        </Button>
                                        <ToggleSwitch Grid.Column="2"
                                                      Margin="0,0,-20,-8"
                                                      IsOn="{x:Bind IsEnabled, Mode=TwoWay}"
                                                      OffContent="{x:Bind helper:Locale.Lang._Misc.Disabled}"
                                                      OnContent="{x:Bind helper:Locale.Lang._Misc.Enabled}"
                                                      Scale="0.8,0.8,0.8" />
                                    </Grid>
                                </controls:SettingsExpander.Content>
                                <controls:SettingsExpander.Header>
                                    <TextBlock extension:TextBlockExtension.RemoveEmptyRuns="True"
                                               TextTrimming="CharacterEllipsis">
                                        <Run Text="{x:Bind Name, Mode=OneWay}" />
                                        <Run extension:TextBlockExtension.PreserveSpace="True"
                                             FontSize="10"
                                             FontWeight="Bold"
                                             Text=" (" />
                                        <Run FontSize="10"
                                             FontWeight="Bold"
                                             Text="{x:Bind PluginFileName, Mode=OneWay}" />
                                        <Run FontSize="10"
                                             FontWeight="Bold"
                                             Text=")" />
                                    </TextBlock>
                                </controls:SettingsExpander.Header>
                                <controls:SettingsExpander.Description>
                                    <TextBlock Text="{x:Bind Author, Converter={StaticResource ByStringConverter}, Mode=OneWay}"
                                               TextTrimming="CharacterEllipsis" />
                                </controls:SettingsExpander.Description>
                                <controls:SettingsExpander.Items>
                                    <controls:SettingsCard Padding="16,16,16,16"
                                                           HorizontalAlignment="Stretch"
                                                           HorizontalContentAlignment="Stretch"
                                                           ContentAlignment="Left">
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch"
                                                  ColumnSpacing="8"
                                                  RowSpacing="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="96" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0"
                                                           Grid.Column="0"
                                                           HorizontalAlignment="Right"
                                                           FontSize="12"
                                                           Opacity=".75"
                                                           Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoDesc}"
                                                           TextAlignment="Right"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="1"
                                                           Grid.Column="0"
                                                           HorizontalAlignment="Right"
                                                           FontSize="12"
                                                           Opacity=".75"
                                                           Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoPluginVer}"
                                                           TextAlignment="Right"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="0"
                                                           HorizontalAlignment="Right"
                                                           FontSize="12"
                                                           Opacity=".75"
                                                           Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoInterfaceVer}"
                                                           TextAlignment="Right"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="3"
                                                           Grid.Column="0"
                                                           HorizontalAlignment="Right"
                                                           FontSize="12"
                                                           Opacity=".75"
                                                           Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoCreationDate}"
                                                           TextAlignment="Right"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="4"
                                                           Grid.Column="0"
                                                           HorizontalAlignment="Right"
                                                           FontSize="12"
                                                           Opacity=".75"
                                                           Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoMainLibLocation}"
                                                           TextAlignment="Right"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="5"
                                                           Grid.Column="0"
                                                           HorizontalAlignment="Right"
                                                           FontSize="12"
                                                           Opacity=".75"
                                                           Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoLoadedPresets}"
                                                           TextAlignment="Right"
                                                           TextWrapping="Wrap" />

                                                <TextBlock Grid.Row="0"
                                                           Grid.Column="1"
                                                           HorizontalAlignment="Left"
                                                           FontSize="12"
                                                           Text="{x:Bind Description, Mode=OneWay}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="1"
                                                           Grid.Column="1"
                                                           HorizontalAlignment="Left"
                                                           FontSize="12"
                                                           Text="{x:Bind Version, Mode=OneWay}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="1"
                                                           HorizontalAlignment="Left"
                                                           FontSize="12"
                                                           Text="{x:Bind StandardVersion, Mode=OneWay}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="3"
                                                           Grid.Column="1"
                                                           HorizontalAlignment="Left"
                                                           FontSize="12"
                                                           Text="{x:Bind CreationDate, Converter={StaticResource LocalFullDateTimeConverter}, Mode=OneWay}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Row="4"
                                                           Grid.Column="1"
                                                           HorizontalAlignment="Left"
                                                           FontSize="12"
                                                           Text="{x:Bind PluginFilePath, Mode=OneWay}"
                                                           TextWrapping="Wrap" />
                                                <ItemsRepeater Grid.Row="5"
                                                               Grid.Column="1"
                                                               ItemsSource="{x:Bind PresetConfigs, Mode=OneWay}">
                                                    <ItemsRepeater.ItemTemplate>
                                                        <DataTemplate x:DataType="plugins:PluginPresetConfigWrapper">
                                                            <TextBlock HorizontalAlignment="Left"
                                                                       extension:TextBlockExtension.RemoveEmptyRuns="True"
                                                                       FontSize="12"
                                                                       TextWrapping="Wrap">
                                                                <Run extension:TextBlockExtension.PreserveSpace="True"
                                                                     Text="• " />
                                                                <Run Text="{x:Bind GameName, Converter={StaticResource GameNameLocaleConverter}, Mode=OneWay}" />
                                                                <Run extension:TextBlockExtension.PreserveSpace="True"
                                                                     Text=" - " />
                                                                <Run Text="{x:Bind ZoneName, Converter={StaticResource GameRegionLocaleConverter}, Mode=OneWay}" />
                                                            </TextBlock>
                                                        </DataTemplate>
                                                    </ItemsRepeater.ItemTemplate>
                                                </ItemsRepeater>
                                            </Grid>
                                            <Button Margin="0,0,-16,-8"
                                                    Padding="4"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Click="{x:Bind pages:SettingsPage.CopyLoadedPluginInformationClick}"
                                                    Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                                    Style="{ThemeResource TransparentDefaultButtonStyle}"
                                                    Tag="{x:Bind}">
                                                <FontIcon FontSize="16"
                                                          Glyph="&#xE8C8;" />
                                                <Button.Flyout>
                                                    <Flyout ShowMode="TransientWithDismissOnPointerMoveAway">
                                                        <Grid Margin="-16,-32"
                                                              Padding="12,0"
                                                              Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                                              BorderThickness="0"
                                                              ColumnSpacing="6">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>
                                                            <FontIcon Grid.Column="0"
                                                                      VerticalAlignment="Center"
                                                                      FontSize="16"
                                                                      Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                                      Glyph="&#xEC61;" />
                                                            <TextBlock Grid.Column="1"
                                                                       Margin="0,-2,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="Bold"
                                                                       Text="{x:Bind helper:Locale.Lang._SettingsPage.Plugin_LoadedInfoClipboardCopied, Mode=OneWay}" />
                                                        </Grid>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </Grid>
                                    </controls:SettingsCard>
                                </controls:SettingsExpander.Items>
                            </controls:SettingsExpander>
                            <Grid Grid.Row="1"
                                  Margin="0,0,0,0"
                                  Padding="4"
                                  CornerRadius="4"
                                  Visibility="{x:Bind IsUpdateAvailable, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.Column="0"
                                           Grid.ColumnSpan="3"
                                           Margin="-4"
                                           Fill="{ThemeResource InfoBarWarningSeverityBackgroundBrush}"
                                           Opacity="1" />
                                <FontIcon Grid.Column="0"
                                          Margin="4"
                                          FontSize="14"
                                          Glyph="&#xE895;" />
                                <TextBlock Grid.Column="1"
                                           Margin="4"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemUpdateStatusAvailable, Mode=OneWay}" />
                                <Button Grid.Column="2"
                                        Padding="0"
                                        Click="OnClickUpdateCurrentPlugin"
                                        Foreground="{ThemeResource SystemFillColorSuccess}"
                                        IsEnabled="{x:Bind IsUpdateInProgress, Converter={StaticResource InverseBooleanConverter}, Mode=OneWay}"
                                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                                        Tag="{x:Bind}"
                                        Visibility="{x:Bind IsUpdateAvailable, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                    <Grid ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Text="{x:Bind NextUpdateManifestInfo, Converter={StaticResource UpdateToVersionStringConverter}, Mode=OneWay}"
                                                   Visibility="{x:Bind IsUpdateInProgress, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}" />
                                        <FontIcon Grid.Column="1"
                                                  Margin="4,4,8,4"
                                                  FontSize="14"
                                                  Glyph="&#xE895;"
                                                  Visibility="{x:Bind IsUpdateInProgress, Converter={StaticResource InverseBooleanVisibilityConverter}, Mode=OneWay}" />
                                        <TextBlock Grid.Column="0"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Text="{x:Bind UpdateProgress, Converter={StaticResource UpdatingPercentageStringConverter}, Mode=OneWay}"
                                                   Visibility="{x:Bind IsUpdateInProgress, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}" />
                                        <ProgressRing Grid.Column="1"
                                                      Width="12"
                                                      Height="12"
                                                      Margin="4,4,8,4"
                                                      IsIndeterminate="{x:Bind UpdateProgress, Converter={StaticResource InverseNumberToBoolConverter}, Mode=OneWay}"
                                                      Maximum="100"
                                                      Visibility="{x:Bind IsUpdateInProgress, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}"
                                                      Value="{x:Bind UpdateProgress, Mode=OneWay}" />
                                    </Grid>
                                    <Button.Resources>
                                        <ResourceDictionary>
                                            <ResourceDictionary.ThemeDictionaries>
                                                <!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
                                                <ResourceDictionary x:Key="Light">
                                                    <SolidColorBrush x:Key="ButtonBackground"
                                                                     Color="#106CCB5F" />
                                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                                                     Color="#A06CCB5F" />
                                                    <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                                                     Color="#706CCB5F" />
                                                </ResourceDictionary>
                                                <ResourceDictionary x:Key="Default">
                                                    <SolidColorBrush x:Key="ButtonBackground"
                                                                     Color="#100F7B0F" />
                                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                                                     Color="#A00F7B0F" />
                                                    <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                                                     Color="#700F7B0F" />
                                                </ResourceDictionary>
                                                <!--  ReSharper restore Xaml.StaticResourceNotResolved  -->
                                            </ResourceDictionary.ThemeDictionaries>
                                        </ResourceDictionary>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                            <Grid Grid.Row="1"
                                  Margin="0,0,0,0"
                                  Padding="4"
                                  CornerRadius="4"
                                  Visibility="{x:Bind IsUpdateCompleted, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="-4"
                                           Fill="{ThemeResource InfoBarSuccessSeverityBackgroundBrush}"
                                           Opacity="1" />
                                <TextBlock Grid.Column="1"
                                           Margin="4"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Text="{x:Bind NextUpdateManifestInfo, Converter={StaticResource PluginUpdatedToVersionStringConverter}, Mode=OneWay}" />
                                <FontIcon Grid.Column="0"
                                          Margin="4"
                                          FontSize="16"
                                          Glyph="&#xE930;" />
                            </Grid>
                            <Grid Grid.Row="1"
                                  Margin="0,0,0,0"
                                  Padding="4"
                                  CornerRadius="4"
                                  Visibility="{x:Bind IsUpdateCheckInProgress, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="-4"
                                           Fill="{ThemeResource InfoBarInformationalSeverityBackgroundBrush}"
                                           Opacity=".5" />
                                <TextBlock Grid.Column="1"
                                           Margin="4"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemUpdateStatusChecking}" />
                                <ProgressRing Grid.Column="0"
                                              Width="12"
                                              Height="12"
                                              Margin="4"
                                              IsIndeterminate="True" />
                            </Grid>
                            <Grid Grid.Row="1"
                                  Margin="0,0,0,0"
                                  Padding="4"
                                  CornerRadius="4"
                                  Visibility="{x:Bind IsPluginUpToDate, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="-4"
                                           Fill="{ThemeResource InfoBarSuccessSeverityBackgroundBrush}"
                                           Opacity="1" />
                                <TextBlock Grid.Column="1"
                                           Margin="4"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewItemUpdateStatusUpToDate}" />
                                <FontIcon Grid.Column="0"
                                          Margin="4"
                                          FontSize="16"
                                          Glyph="&#xE930;" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="2"
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewFooterWarning1}"
                           TextWrapping="Wrap"
                           Visibility="{x:Bind RestartLauncherButton.IsEnabled, Converter={StaticResource BooleanVisibilityConverter}, Mode=OneWay}" />
                <Button x:Name="RestartLauncherButton"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Click="{x:Bind pages:PluginManagerPage.AskLauncherRestart}"
                        CornerRadius="{x:Bind extension:UIElementExtensions.AttachRoundedKindCornerRadius(RestartLauncherButton)}"
                        IsEnabled="{x:Bind pages:PluginManagerPage.Context.IsChanged, Mode=OneWay}"
                        Loaded="{x:Bind extension:UIElementExtensions.AttachHandCursorOnLoaded}"
                        Style="{ThemeResource AccentButtonStyle}">
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  FontSize="16"
                                  Glyph="&#xE777;" />
                        <TextBlock Grid.Column="1"
                                   Margin="0,-1,0,0"
                                   FontSize="14"
                                   Text="{x:Bind helper:Locale.Lang._PluginManagerPage.ListViewFooterRestartButton}" />
                    </Grid>
                </Button>
            </Grid>
        </Grid>
        <Grid x:Name="ImportBoxContainer"
              Grid.Column="1"
              Margin="8,26,26,26"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ImportBoxButtonBackground"
                                             Color="#B0FFFFFF" />
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                             Color="#0FFFFFFF" />
                            <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                             Color="#60FFFFFF" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Default">
                            <SolidColorBrush x:Key="ImportBoxButtonBackground"
                                             Color="#40000000" />
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver"
                                             Color="#30000000" />
                            <SolidColorBrush x:Key="ButtonBackgroundPressed"
                                             Color="#50000000" />
                        </ResourceDictionary>
                        <!--  ReSharper restore Xaml.StaticResourceNotResolved  -->
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <Button x:Name="ImportBoxButton"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{StaticResource ImportBoxButtonBackground}"
                    Click="OnClickImportButton"
                    CornerRadius="20">
                <interactivity:Interaction.Behaviors>
                    <interactivity:EventTriggerBehavior EventName="PointerEntered">
                        <behaviors:StartAnimationAction Animation="{x:Bind ImportBoxPlusGridEnterAnimation}" />
                    </interactivity:EventTriggerBehavior>

                    <interactivity:EventTriggerBehavior EventName="PointerExited">
                        <behaviors:StartAnimationAction Animation="{x:Bind ImportBoxPlusGridExitAnimation}" />
                    </interactivity:EventTriggerBehavior>

                    <interactivity:EventTriggerBehavior EventName="PointerPressed">
                        <behaviors:StartAnimationAction Animation="{x:Bind ImportBoxPlusGridPressedAnimation}" />
                    </interactivity:EventTriggerBehavior>

                    <interactivity:EventTriggerBehavior EventName="PointerReleased">
                        <behaviors:StartAnimationAction Animation="{x:Bind ImportBoxPlusGridExitAnimation}" />
                    </interactivity:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>

                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      RowSpacing="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button x:Name="ImportBoxPlusGrid"
                            Grid.Row="0"
                            Width="128"
                            Height="128"
                            HorizontalAlignment="Center"
                            Background="{ThemeResource ImportBoxButtonBackground}"
                            BorderBrush="{ThemeResource ButtonBorderBrushPressed}"
                            Click="OnClickImportButton"
                            CornerRadius="24"
                            Opacity=".75"
                            RenderTransformOrigin="0.5,0.5">
                        <ui:Effects.Shadow>
                            <media:AttachedCardShadow BlurRadius="8"
                                                      CornerRadius="{x:Bind ImportBoxPlusGrid.CornerRadius, Converter={StaticResource BottomRightCornerRadiusDoubleValueConverter}, Mode=OneWay}"
                                                      Opacity=".1"
                                                      Offset="0, 2, 0" />
                        </ui:Effects.Shadow>
                        <animations:Explicit.Animations>
                            <animations:AnimationSet x:Name="ImportBoxPlusGridPressedAnimation">
                                <animations:OffsetDropShadowAnimation To="0, 0, 0"
                                                                      Duration="0:0:.25" />
                                <animations:OpacityDropShadowAnimation To=".25"
                                                                       Duration="0:0:.25" />
                                <animations:BlurRadiusDropShadowAnimation To="0"
                                                                          Duration="0:0:.25" />
                                <animations:OpacityAnimation To=".5"
                                                             Duration="0:0:.25" />
                            </animations:AnimationSet>

                            <animations:AnimationSet x:Name="ImportBoxPlusGridEnterAnimation">
                                <animations:OffsetDropShadowAnimation To="0, 8, 0"
                                                                      Duration="0:0:.25" />
                                <animations:OpacityDropShadowAnimation To=".25"
                                                                       Duration="0:0:.25" />
                                <animations:BlurRadiusDropShadowAnimation To="32"
                                                                          Duration="0:0:.25" />
                                <animations:OpacityAnimation To="1"
                                                             Duration="0:0:.25" />
                            </animations:AnimationSet>

                            <animations:AnimationSet x:Name="ImportBoxPlusGridExitAnimation">
                                <animations:OffsetDropShadowAnimation To="0, 2, 0"
                                                                      Duration="0:0:.25" />
                                <animations:OpacityDropShadowAnimation To=".1"
                                                                       Duration="0:0:.25" />
                                <animations:BlurRadiusDropShadowAnimation To="8"
                                                                          Duration="0:0:.25" />
                                <animations:OpacityAnimation To=".75"
                                                             Duration="0:0:.25" />
                            </animations:AnimationSet>
                        </animations:Explicit.Animations>

                        <FontIcon FontSize="48z"
                                  Glyph="&#xE710;" />
                    </Button>
                    <StackPanel Grid.Row="1"
                                Spacing="16">
                        <TextBlock MaxWidth="420"
                                   Margin="16,0"
                                   HorizontalAlignment="Center"
                                   FontSize="32"
                                   HorizontalTextAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap">
                            <Run Text="{x:Bind helper:Locale.Lang._PluginManagerPage.RightPanelImportTitle1}" />
                            <Run FontWeight="Bold"
                                 Text=".zip" />
                            <Run Text="{x:Bind helper:Locale.Lang._PluginManagerPage.RightPanelImportTitle2}" />
                            <Run FontWeight="Bold"
                                 Text="manifest.json" />
                            <Run Text="{x:Bind helper:Locale.Lang._PluginManagerPage.RightPanelImportTitle3}" />
                        </TextBlock>
                        <TextBlock MaxWidth="420"
                                   Margin="16,0"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   HorizontalTextAlignment="Center"
                                   Opacity=".5"
                                   Text="{x:Bind helper:Locale.Lang._PluginManagerPage.RightPanelImportTitle4}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>
