<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="BackgroundTest.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:newPipsPager="using:BackgroundTest.CustomControl.NewPipsPager"
    mc:Ignorable="d"
    Title="TestWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.Resources>
            <newPipsPager:IndexAddOneConverter x:Key="IndexAddOneConverter"/>
        </Grid.Resources>
        <Image Source="ms-appx:///CustomControl/BGTestImage.jpg"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        <Grid x:Name="ContainerGrid"
              Background="{ThemeResource ContentBackgroundAcrylicBrush}"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Center"
              Padding="10, 10"
              CornerRadius="24"
              Margin="32"
              SizeChanged="ContainerGrid_OnSizeChanged">
            <TextBlock x:Name="ContainerSizeIndicator"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Opacity=".5"/>
            <Grid ColumnSpacing="8"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Margin="8,0,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold">
                    <Run Text="{Binding ElementName=NewPipsPager, Path=ItemIndex, Converter={StaticResource IndexAddOneConverter}, Mode=OneWay}"/>
                    <Run Text="/"/>
                    <Run Text="{Binding ElementName=NewPipsPager, Path=ItemsCount, Mode=OneWay}"/>
                </TextBlock>
                <newPipsPager:NewPipsPager x:Name="NewPipsPager"
                                           Grid.Column="1"
                                           ItemsCount="8"
                                           ItemIndex="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           PreviousNavigationButtonMode="Visible"
                                           NextNavigationButtonMode="Visible"
                                           Orientation="Horizontal"/>
            </Grid>
        </Grid>
        <Grid x:Name="ContainerVerticalGrid"
              Background="{ThemeResource ContentBackgroundAcrylicBrush}"
              VerticalAlignment="Center"
              HorizontalAlignment="Right"
              Padding="12, 10"
              CornerRadius="24"
              Margin="32">
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <newPipsPager:NewPipsPager x:Name="NewPipsPagerVertical"
                                           ItemsCount="124"
                                           ItemIndex="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           PreviousNavigationButtonMode="Visible"
                                           NextNavigationButtonMode="Visible"
                                           Orientation="Vertical"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
