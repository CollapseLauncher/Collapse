<!--  ReSharper disable UnusedMember.Local  -->
<!--  ReSharper disable Xaml.StaticResourceNotResolved  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:BackgroundTest.CustomControl.PanelSlideshow">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <AcrylicBrush x:Key="SlideshowButtonBackground" TintColor="#FFFFFF" FallbackColor="#FFFFFF" TintOpacity=".65" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <AcrylicBrush x:Key="SlideshowButtonBackground" TintColor="#222222" FallbackColor="#222222" TintOpacity=".5" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <x:String x:Key="SlideshowPreviousButtonGlyph">&#xE96F;</x:String>
    <x:String x:Key="SlideshowNextButtonGlyph">&#xE970;</x:String>
    <x:String x:Key="SlideshowPreviousButtonVerticalGlyph">&#xE971;</x:String>
    <x:String x:Key="SlideshowNextButtonVerticalGlyph">&#xE972;</x:String>

    <Style x:Key="SlideshowPreviousButtonStyle" TargetType="Button" BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}">
        <Setter Property="Content" Value="{StaticResource SlideshowPreviousButtonGlyph}" />
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="SlideshowNextButtonStyle" TargetType="Button" BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}">
        <Setter Property="Content" Value="{StaticResource SlideshowNextButtonGlyph}" />
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="SlideshowPreviousButtonVerticalStyle" TargetType="Button" BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}">
        <Setter Property="Content" Value="{StaticResource SlideshowPreviousButtonVerticalGlyph}" />
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="SlideshowNextButtonVerticalStyle" TargetType="Button" BasedOn="{StaticResource NewPipsPagerNavigationButtonBaseStyle}">
        <Setter Property="Content" Value="{StaticResource SlideshowNextButtonVerticalGlyph}" />
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>